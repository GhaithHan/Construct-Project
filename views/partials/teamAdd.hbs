<div class="teamAdd">
    <div>
        <h2>Add a new member</h2>
    </div>
    <div class="teamPostList">
        <ul>
        {{#each userListArray}}
        <div class="teamPostEach">
            <li>
                <form method="POST" action="/process-teamAdd">
                    <input type="hidden" name="userId" value={{this._id}} />
                    <input type="hidden" name="projectId" value={{../projectId}} />
                    <br />
                    <div>
                        <h3>{{this.firstName}} {{this.lastName}}</h3>
                    </div>
                    <div>
                        <h4>{{this.job}}</h4>
                    </div>
                    <div>
                        <a href="mailto:{{this.email}}">Email</a>
                    </div>
                    </br>
                    <div>
                        <button>Add To Team</button>
                    </div>
                </form>
            </li>
        </div>
            {{/each}}
        </ul>

    </div>

</div>





